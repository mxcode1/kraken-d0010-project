# ============================================================================
# Kraken Energy D0010 Project - System Dependencies (Brewfile)
# ============================================================================
# Installation: brew bundle install
# Purpose: Installs all system-level dependencies for the D0010 system
# ============================================================================

# Core Python runtime
brew "python@3.11"           # Python 3.11 with pip and venv support

# Database systems
brew "postgresql@15"         # PostgreSQL 15 server and client tools

# Development utilities
brew "git"                   # Version control system
brew "curl"                  # HTTP client for downloads
brew "wget"                  # Alternative HTTP client

# Compression and archive tools
brew "gzip"                  # Gzip compression (usually pre-installed)
brew "tar"                   # Archive extraction (usually pre-installed)

# Optional: Enhanced development experience
brew "tree"                  # Directory tree visualization
brew "htop"                  # Enhanced process monitor
brew "jq"                    # JSON processor for debugging

# Optional: Database management tools
cask "pgadmin4"              # PostgreSQL GUI (optional)

# System information (for troubleshooting)
brew "neofetch"              # System information display